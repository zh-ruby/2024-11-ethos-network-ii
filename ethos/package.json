{
  "name": "ethos",
  "version": "0.0.1",
  "private": true,
  "description": "Ethos monorepo",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "packages/env",
    "packages/helpers",
    "packages/logger",
    "packages/contracts",
    "packages/config",
    "packages/score",
    "packages/*",
    "services/*",
    "standalone/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:packages": "npm run build --workspace=packages",
    "build:standalone": "npm run build --workspace=standalone",
    "cleanup": "./scripts/cleanup.sh",
    "db:bootstrap": "./scripts/dev/db.bootstrap.sh",
    "knip": "knip",
    "lint": "npm run validate:root-package && npm run lint:src && npm run lint -ws --if-present",
    "lint:src": "cross-env NODE_OPTIONS=\"--max_old_space_size=8192\" eslint --ext .ts,.tsx . --max-warnings=0 --cache --cache-strategy content --cache-location .cache/.eslintcache",
    "postinstall": "patch-package",
    "prepare": "husky",
    "seed:testnet": "tsx ./scripts/testnet-data.ts",
    "start": "./scripts/start.sh",
    "start:monitoring": "COMPOSE_PROFILES=monitoring npm start",
    "start:echo": "npm run start -w services/echo",
    "start:web": "npm run dev -w services/web",
    "start:markets": "npm run dev -w services/emporos",
    "test": "npm run test -ws --if-present && vitest --run",
    "test:watch": "npm run test -ws --if-present && vitest",
    "test:ci": "npm run test -- --coverage",
    "test:contracts:view": "open-cli http://localhost:3210/packages/contracts/coverage/lcov-report && serve -l 3210",
    "typecheck": "tsc --noEmit -p tsconfig.check.json && npm run typecheck -ws --if-present",
    "validate": "./scripts/validate-locally.sh",
    "validate:root-package": "tsx ./scripts/validate-package.ts",
    "validate:secrets": "tsx ./scripts/key-detector.ts"
  },
  "author": "Ethos Network Inc.",
  "license": "UNLICENSED",
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.24.5",
    "@next/eslint-plugin-next": "^14.2.15",
    "@stylistic/eslint-plugin-js": "^2.11.0",
    "@tanstack/eslint-plugin-query": "^5.61.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.17.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.1.5",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-love": "^44.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-vitest": "^0.4.1",
    "glob": "^11.0.0",
    "husky": "^9.1.7",
    "inquirer": "^8.2.6",
    "knip": "^5.37.2",
    "open-cli": "^8.0.0",
    "patch-package": "^8.0.0",
    "picocolors": "^1.1.1",
    "prettier": "3.3.3",
    "serve": "^14.2.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.4"
  }
}